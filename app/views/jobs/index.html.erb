<p><%= link_to "Post A New Job", new_job_path, class: "btn btn-info" %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Posted</th>
      <th>Job Title</th>
      <th>Company Name</th>
      <th>Location</th>
      <% if user_signed_in? %>
        <th>#</th>
        <th>#</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <th><%= format_date(job.created_at) %></th>
        <th><%= link_to job.title, job_path(job) %></th>
        <th><%= job.company_name %></th>
        <th><%= job.location %></th>
        <% if user_signed_in? && job.belongs_to?(current_user) %>
          <th><%= link_to "Edit", edit_job_path(job), class: "btn btn-info" %></th>
          <th><%= link_to "Delete", job_path(job), class: "btn btn-danger", method: :delete %></th>
        <% else %>
          <th>#</th>
          <th>#</th>
        <% end %>
      </tr>  
    <% end %>
  </tbody>
</table>
