    <ul>
      <% @job.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @job do |f| %>
  <div class="form-group">
    <label>Job Title</label>
    <%= f.text_field :title, class: "form-control"  %>
  </div>
  <div class="form-group">
    <label>Company Name</label>
    <%= f.text_field :company_name, class: "form-control"  %>
  </div>
  <div class="form-group">
    <label>URL</label>
    <%= f.text_field :url, class: "form-control"  %>
  </div>
  <div class="form-group">
    <label>Job Type</label>
    <% Job.job_types.keys.each do |key| %>
      <label class="checkbox-inline">
        <% if @job.job_type == key %>
          <%= f.radio_button :job_type, key, checked: true %>
        <% else %>
          <%= f.radio_button :job_type, key %>
        <% end %>
        <%= key.to_sym %>
      </label>
    <% end %>
  </div>
  <div class="form-group">
    <label>Occupation</label>
    <% Job.occupations.keys.each do |key| %>
      <label class="checkbox-inline">
        <% if @job.occupation == key %>
          <%= f.radio_button :occupation, key, checked: true %>
        <% else %>
          <%= f.radio_button :occupation, key %>
        <% end %>
        <%= key.to_sym %>
      </label>
    <% end %>
  </div>
  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location, class: "form-control"  %>
  </div>
  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, class: "form-control"  %>
  </div>
  <div class="form-group">
    <label>Apply Information</label>
    <%= f.text_area :apply_information, rows: 5, class: "form-control"  %>
  </div>
  <%= f.submit nil, class: "btn btn-default" %>
<% end %>
